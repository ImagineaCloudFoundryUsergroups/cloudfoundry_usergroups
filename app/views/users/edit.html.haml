%h2
= form_for(@user, :as => :user, :url => user_path(@user), :html => { :method => :put }) do |f|
  %p
    = f.label :name
    %br/
    = f.text_field :fullname
  %p
    = f.label :contact_number
    = f.text_field :mobile
  %p
    = f.label :website_url
    %br/
    = f.url_field :website_url
  %p
    = f.label :linkedin_url
    %br/
    = f.url_field :linkedin_url
  %p
    = f.label :twitter_url
    %br/
    = f.url_field :twitter_url
  %p= f.submit "continue"
